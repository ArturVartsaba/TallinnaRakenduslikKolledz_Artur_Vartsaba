@model TallinnaRakenduslikKolledz.Models.InstructorIndexData
@{
	ViewData["Title"] = "Õpetajad";
}
<h2>Õpetajad</h2>
<p>
	<a asp-action="Create">Lisa Õpetaja</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>Perekonnanimi</th>
			<th>Eesnimi</th>
			<th>Töölevõtukuupäev</th>
			<th>Age</th>
			<th>Kursused</th>
			<th>Palk</th>
			<th>tööriistad</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var instructor in Model.Instructors)
		{
			string selectedRow = "";
			if (instructor.ID ==(int?)ViewData["InstructorID"])
			{
				selectedRow = "table-success";
			}
			<tr class="@selectedRow">
				<td>@Html.DisplayFor(modelItem => instructor.LastName)</td>
				<td>@Html.DisplayFor(modelItem => instructor.FirstName)</td>
				<td>@Html.DisplayFor(modelItem => instructor.HireDate)</td>
				<td>@Html.DisplayFor(modelItem => instructor.Age)</td>
				<td>@Html.DisplayFor(modelItem => instructor.CourseAssignments)</td>
				<td>@Html.DisplayFor(modelItem => instructor.Salary)</td>
				<td>
					<a asp-action="Edit" asp-route-id="@instructor">Muuda</a>
					<a asp-action="Details" asp-route-id="@instructor">Vaata</a>
					<a asp-action="Delete" asp-route-id="@instructor">Kustuta</a>
				</td>
			</tr>
		}
	</tbody>
</table>