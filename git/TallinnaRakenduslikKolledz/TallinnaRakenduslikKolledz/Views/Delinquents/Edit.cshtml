@using TallinnaRakenduslikKolledz.Models
@model TallinnaRakenduslikKolledz.Models.Delinquent

@{
	ViewData["Title"] = "Muuda rikkumise";
}

<h1>Muuda rikkumise üksikasju</h1>
<hr />
<div Class="row">
	<div class="col-md-4">
		<form asp-action="Edit">

			<input type="hidden" asp-for="Id" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div>
				<label asp-for="FirstName" class="control-label"></label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>

			<div>
				<label asp-for="LastName" class="control-label"></label>
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>

			<div>
				<label asp-for="ViolationType" class="control-label"></label>
				<select asp-for="ViolationType" class="form-control" asp-items="Html.GetEnumSelectList<Violation>()">
					<option value="" class="form-control">--Vali rikkumine--</option>
				</select>
				<span asp-validation-for="ViolationType" class="text-danger"></span>
			</div>

			<div>
				<label asp-for="Position" class="control-label"></label>
				<select asp-for="Position" class="form-control" asp-items="Html.GetEnumSelectList<Position>()">
					<option value="" class="form-control">--Vali staatus--</option>
				</select>
				<span asp-validation-for="Position" class="text-danger"></span>
			</div>


			<div>
				<label asp-for="Status" class="control-label"></label>
				<input asp-for="Status" class="form-control" />
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Muuda" class="btn btn-primary" />
			</div>

		</form>
	</div>
</div>
<div>
	<a asp-action="Index">Mine tagasi loendisse</a>
</div>